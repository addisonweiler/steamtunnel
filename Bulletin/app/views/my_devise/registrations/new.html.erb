<%= stylesheet "specific/new_member" %>
<%= javascript "login/new_member" %>
<h2 class="header">Sign up</h2>

<div class="main">
<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <table>
  <tr><td><%= f.label :email %></td>
  <td><%= f.email_field :email %></td></tr>

  <tr><td><%= f.label :password %></td>
  <td><%= f.password_field :password %></td></tr>

  <tr><td><%= f.label :password_confirmation %></td>
  <td><%= f.password_field :password_confirmation %></td></tr>

  <tr><td><%= f.submit "Sign up" %></td></tr>
  </table>
<% end %>

<%= button_to "Sign in", new_session_path(resource_name), :id => "sign_in", :method => :get %>
</div>