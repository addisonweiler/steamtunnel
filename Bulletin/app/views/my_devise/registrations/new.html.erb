<%= stylesheet 'specific/new_member' %>
<%= javascript 'login/new_member' %>
<h2 class="header">Sign up</h2>

<div class="main">
  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
      <table>
        <tr>
          <td>
            <%= f.label 'Steam Tunnel today!', class: 'large_label' %>
          </td>
        </tr>
        <tr>
          <td>
            <%= f.email_field :email, placeholder: 'Stanford Email' %>
          </td>
        </tr>
        <tr>
          <td>
            <%= f.password_field :password, placeholder: 'Password' %>
          </td>
        </tr>
        <tr>
          <td>
            <%= f.password_field :password_confirmation, placeholder: 'Confirm Password' %>
          </td>
        </tr>
        <tr>
          <td>
            <%= f.submit 'Sign up', class: 'btn btn-large btn-primary' %>
          </td>
        </tr>
      </table>
  <% end %>

  <%= button_to 'Sign in', new_session_path(resource_name), :id => 'sign_in', :method => :get %>
</div>