<%- if controller_name != 'sessions' %>
  <%= button_to "Sign in", new_session_path(resource_name), :id => "sign_in", :method => :get %>
<% end -%>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= button_to "Sign up", new_registration_path(resource_name), :id => "sign_up", :method => :get %>
<% end -%>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' %>
  <div class="new_password"><%= link_to "Forgot password?", new_password_path(resource_name), :id => "new_password" %></div>
<% end -%>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <div class="confirmation"><%= link_to "No confirmation?", new_confirmation_path(resource_name),
   :id => "confirmation" %></div>
<% end -%>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name) %><br />
<% end -%>